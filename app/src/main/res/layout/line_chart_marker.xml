<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="80dp"
    android:background="@drawable/chat_marker"
    android:backgroundTint="@color/colorPrimaryLight"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/text_amount_value"
        android:layout_width="200dp"
        android:layout_height="24dp"
        android:layout_marginStart="@dimen/gutterSpaceHalf"
        android:layout_marginTop="4dp"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toTopOf="@id/text_amount_value"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Amount* 200"
        style="@style/text_body2" />

    <TextView
        android:id="@+id/text_date"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginStart="@dimen/gutterSpaceHalf"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_amount_value"
        tools:text="4 Wed Aug 2021"
        style="@style/text_body2" />


</androidx.constraintlayout.widget.ConstraintLayout>