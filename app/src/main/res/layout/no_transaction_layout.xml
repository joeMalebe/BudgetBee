<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/no_transactions_layout"
    android:padding="@dimen/gutterSpace"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/no_transactions_image_view"
        android:layout_width="@dimen/no_transactions_icon_size"
        android:layout_height="@dimen/no_transactions_icon_size"
        android:src="@drawable/ic_baseline_money_off"
        android:tint="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/no_recorded_transactions"
        app:layout_constraintEnd_toEndOf="@id/no_transactions_image_view"
        app:layout_constraintStart_toStartOf="@id/no_transactions_image_view"
        android:layout_margin="@dimen/gutterSpace"
        style="@style/text_body1"
        android:textColor="@color/gray"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/no_transactions_image_view" />

</androidx.constraintlayout.widget.ConstraintLayout>