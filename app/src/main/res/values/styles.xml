<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BudgetBeeMainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="headings_text_base_font" parent="BudgetBeeMainTheme">
        <item name="fontFamily">@font/lora</item>
    </style>
    <style name="body_text_base_font" parent="BudgetBeeMainTheme">
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="BudgetBeeMainTheme.Launcher">
        <item name="android:windowBackground">@drawable/ic_budget_bee_skeleton</item>
    </style>

    <style name="BudgetBeeMainTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BudgetBeeMainTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="BudgetBeeMainTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="text_body_dark_87" parent="body_text_base_font">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:alpha">0.87</item>
    </style>

    <style name="text_heading_dark_87" parent="headings_text_base_font">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:alpha">0.87</item>
    </style>

    <style name="text_body1" parent="text_body_dark_87">
        <item name="android:textSize">16sp</item>

    </style>

    <style name="text_body2" parent="text_body_dark_87">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_light</item>
    </style>

    <style name="text_heading6" parent="headings_text_base_font">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text_heading6_light" parent="headings_text_base_font">
        <item name="android:textSize">18sp</item>
        <item name="android:alpha">0.54</item>
    </style>

    <style name="text_heading5" parent="headings_text_base_font">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="text_toolbar" parent="headings_text_base_font">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="horizontal_progress_bar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">30dip</item>
        <item name="android:progressBackgroundTint">@android:color/transparent</item>
    </style>
</resources>
