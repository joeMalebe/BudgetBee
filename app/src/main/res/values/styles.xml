<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BudgetBeeMainTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:fontFamily">sans-serif</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="BudgetBeeMainTheme.Launcher">
        <item name="android:windowBackground">@drawable/ic_budget_bee_skeleton</item>
    </style>

    <style name="BudgetBeeMainTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BudgetBeeMainTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="BudgetBeeMainTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="text_dark_87" parent="BudgetBeeMainTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:alpha">0.87</item>
    </style>

    <style name="text_body1" parent="text_dark_87">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_body2" parent="text_dark_87">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_heading6" parent="text_dark_87">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text_heading5" parent="text_dark_87">
        <item name="android:textSize">24sp</item>
    </style>
</resources>
